@page
@using Microsoft.AspNetCore.Mvc.Localization
@using JS.Abp.DataDictionary.Localization
@using JS.Abp.DataDictionary.Web.Pages.DataDictionary.DataDictionaryItems
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@using JS.Abp.DataDictionary.DataDictionaryItems;
@using System.Globalization
@inject IHtmlLocalizer<DataDictionaryResource> L
@model EditModalModel
@{
    Layout = null;
}

<form data-ajaxForm="true" asp-page="/DataDictionary/DataDictionaryItems/EditModal" autocomplete="off">
    <abp-modal id="DataDictionaryItemEditModal">
        <abp-modal-header title="@L["Update"].Value"></abp-modal-header>

        <abp-modal-body>

                    <abp-input asp-for="Id" />
                    <abp-input asp-for="DataDictionaryItem.ConcurrencyStamp" hidden="true" suppress-label="true"/>
                    
                    @* <abp-select asp-for="DataDictionaryItem.DataDictionaryId" asp-items="Model.DataDictionaryLookupList" label="@L["DataDictionary"].Value"/> *@
                    
            <abp-input asp-for="DataDictionaryItem.Sequence"   />


            <abp-input asp-for="DataDictionaryItem.Code"   />


            <abp-input asp-for="DataDictionaryItem.DisplayText"   />


            <abp-input asp-for="DataDictionaryItem.Description" text-area  />


                    <abp-input asp-for="DataDictionaryItem.IsActive"   />
                    
                     <abp-input type="hidden" asp-for="DataDictionaryItem.DataDictionaryId"   />

                    
                


        </abp-modal-body>

        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)">

        </abp-modal-footer>
    </abp-modal>
</form>
